# Postgres connection string
# Format: postgres://user:password@host:port/dbname
DATABASE_URL=postgres://postgres:postgres@localhost:5432/grezwanderer

# Environment
NODE_ENV=development

# Mapbox token (frontend map)
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# Clerk (auth)
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# VN session signing (required in production)
# Generate a strong random value, e.g.:
# openssl rand -hex 32
VN_SESSION_SECRET=change-me-to-a-long-random-secret
